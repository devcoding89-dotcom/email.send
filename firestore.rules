rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    function isValidRelation(userId) {
      return request.resource.data.userId == userId && request.resource.data.userId == request.auth.uid;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create, update: if isOwner(userId);
    }

    match /users/{userId}/parses/{id} {
      allow read, list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidRelation(userId);
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/campaigns/{id} {
      allow read, list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidRelation(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/campaigns/{campaignId}/logs/{id} {
      allow read, list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidRelation(userId);
    }

    match /users/{userId}/contacts/{id} {
      allow read, list: if isOwner(userId);
      allow create: if isOwner(userId) && isValidRelation(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}
